{
    "name": "New England IPA",
    "comment": "http://www.beerstorevienna.at/wp-content/uploads/2017/11/11-Hobby-BrauRezept-November-NEIPA.pdf",
    "steps": [
        {
            "id": 1,
            "step": "Mit 21l einmaischen",
            "temperature": 55,
            "heating": "one_time",
            "stirring": "full",
            "duration": "wait",
            "alarm": [ { "time": 0, "text": "Einmaischen starten!" } ]
        },
        {
            "id": 2,
            "step": "Eiweißrast",
            "temperature": 55,
            "heating": "control",
            "stirring": "full",
            "duration": 10,
            "hysteresis": 0.5
        },
        {
            "id": 3,
            "step": "Maltoserast",
            "temperature": 62,
            "heating": "control",
            "stirring": "control",
            "duration": 35,
            "hysteresis": 0.5
        },
        {
            "id": 4,
            "step": "Verzuckerung",
            "temperature": 71,
            "heating": "control",
            "stirring": "control",
            "duration": 25,
            "hysteresis": 0.5
        },
        {
            "id": 5,
            "step": "Abmaischen",
            "temperature": 78,
            "heating": "one_time",
            "stirring": "control",
            "duration": "wait",
            "hysteresis": 0.5,
            "alarm": [ { "time": 5, "text": "Abmaischen starten!" } ]
        },
        {
            "id": 6,
            "step": "Läuterruhe",
            "temperature": 1,
            "heating": "off",
            "stirring": "off",
            "duration": 20,
            "alarm": [ { "time": 20, "text": "Die Läuterung kann beginnen!" } ]
        },
        {
            "id": 7,
            "step": "Mit 9l Nachguss läutern",
            "temperature": 1,
            "heating": "off",
            "stirring": "off",
            "duration": "wait",
            "alarm": [ { "time": 0, "text": "Hopfengabe 1: Bitte 5g Mosaic zur Vorderwürze geben!" } ]
        },
        {
            "id": 8,
            "step": "Kochen und Hopfengaben",
            "temperature": 97,
            "heating": "full",
            "stirring": "off",
            "duration": 70,
            "hysteresis": 0.1,
            "alarm": [
                { "time": 70, "text": "Hopfengabe 2: Bitte 20g Mosaic und 20g VicSecret zum Whirlpool geben!" }  
            ]
        },
        {
            "id": 9,
            "step": "Nachisomerisierung",
            "temperature": 1,
            "heating": "off",
            "stirring": "off",
            "duration": 10,
            "hysteresis": 0.1,
            "alarm": [
                { "time": 10, "text": "Mit Kühlen beginnen!" }  
            ]
        },
        {
            "id": 10,
            "step": "Kühlung",
            "temperature": 1,
            "heating": "off",
            "stirring": "off",
            "duration": 20,
            "hysteresis": 0.1,
            "alarm": [
                { "time": 0, "text": "Wasser an!" },
                { "time": 20, "text": "Wasser aus!" }  
            ]
        }
    ]
}

